<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.core.hospital.detail.NonCovidHospitalDetailFragment">

    <com.simform.refresh.SSPullToRefreshLayout
        android:id="@+id/srl_non_covid_hospital_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_hospital_detail_non_covid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="100dp"
            tools:listitem="@layout/item_list_detail_hospital" />

    </com.simform.refresh.SSPullToRefreshLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/item_list_detail_hospital_placeholder" />

            <include layout="@layout/item_list_detail_hospital_placeholder" />

            <include layout="@layout/item_list_detail_hospital_placeholder" />

            <include layout="@layout/item_list_detail_hospital_placeholder" />

            <include layout="@layout/item_list_detail_hospital_placeholder" />
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <include
        android:id="@+id/view_no_connected"
        layout="@layout/no_internet_layout"
        android:visibility="gone" />

    <include
        android:id="@+id/view_empty"
        layout="@layout/empty_layout"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>